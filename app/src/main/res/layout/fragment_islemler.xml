<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:orientation="vertical"
    tools:context=".ui.IslemlerFragment">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="İşlemler"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:textColor="@color/fab_color">
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="Kart yönetimi"
        android:layout_marginBottom="@dimen/_18sdp"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        android:textColor="@color/icon_color">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/islemler_backround"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/add_circle_blue">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Yeni İstanbulkart ekle"
                android:textColor="@color/islemler_text_color"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                app:tint="#24a7d3"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24">
            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/islemler_backround"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/top_arrow">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="TL yükle"
                android:textColor="@color/islemler_text_color"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                app:tint="#24a7d3"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24">
            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/islemler_backround"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/turkish_liraa">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Dolu dolu TL yükle"
                android:textColor="@color/islemler_text_color"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                app:tint="#24a7d3"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24">
            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/islemler_backround"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:tint="@color/islemler_icon_color"
                android:src="@drawable/mobile_payment">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Abonman yükle"
                android:textColor="@color/islemler_text_color"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                app:tint="#24a7d3"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24">
            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/islemler_backround"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/transfer">
            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Bakiye göster"
                android:textColor="@color/islemler_text_color"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                app:tint="#24a7d3"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24">
            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Ödeme ve bakiye sorgulama"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/icon_color">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="@color/islemler_backround"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="@dimen/_10sdp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_marginStart="@dimen/_10sdp"
                app:tint="@color/islemler_icon_color"
                android:src="@drawable/scannnnn">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="QR ile öde"
                android:textColor="@color/islemler_text_color"
                android:textSize="@dimen/_12ssp"
                android:textStyle="bold">

            </TextView>
            <ImageView
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"
                android:layout_gravity="center_vertical"
                app:tint="#24a7d3"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24">
            </ImageView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
</ScrollView>